# Nintendo GameCube Controller Adapter (NSO)
# Allow non-root access for HID and USB communication
SUBSYSTEM=="usb", ATTRS{idVendor}=="057e", ATTRS{idProduct}=="2073", MODE="0666"
SUBSYSTEM=="hidraw", ATTRS{idVendor}=="057e", ATTRS{idProduct}=="2073", MODE="0666"

# Allow non-root access to uinput for virtual gamepad creation
KERNEL=="uinput", MODE="0666", OPTIONS+="static_node=uinput"
